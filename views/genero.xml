<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Lista -->
        <record id="vista_filmotecachicote_genero_tree" model="ir.ui.view">
            <field name="name">vista_filmotecachicote_genero_tree</field>
            <field name="model">filmotecachicote.genero</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Formulario -->
        <record id="vista_filmotecachicote_genero_form" model="ir.ui.view">
            <field name="name">vista_filmotecachicote_genero_form</field>
            <field name="model">filmotecachicote.genero</field>
            <field name="arch" type="xml">
                <form string="formulario_genero">
                    <sheet>
                        <group name="group_top">
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción  -->
        <record model="ir.actions.act_window" id="accion_filmotecachicote_genero_form">
            <field name="name">Listado de géneros</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">filmotecachicote.genero</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Géneros
                </p>
                <p>Click <strong> 'Nuevo' </strong> para añadir nuevos elementos.</p>
            </field>
        </record>

        <!-- Segundo nivel -->
        <menuitem name="Listado de Géneros" id="menu_filmotecachicote_listado_generos" parent="menu_filmotecachicote_raiz"/>

        <!-- Tercer nivel con action -->
        <menuitem name="Consultar" id="menu_filmotecachicote_generos" parent="menu_filmotecachicote_listado_generos"
                  action="accion_filmotecachicote_genero_form"/>
    </data>
</odoo>